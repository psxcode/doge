{
  "lerna": "3.0.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "ignoreChanges": [
    "**/.nyc_output/**",
    "**/coverage/**",
    "**/node_modules/**",
    "**/dist/**",
    "**/*.spec.ts",
    "**/*.opts",
    "**/tsconfig.json",
    "**/tsconfig.test.json",
    "**/tshook.js"
  ],
  "command": {
    "publish": {
      "message": "chore(release): publish %s",
      "allowBranch": "master",
      "conventionalCommits": true
    }
  }
}
